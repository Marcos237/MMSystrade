@model Systrade.Aplicacao.ViewModel.EnderecoViewModel

<div class="modal-header">
    <h4 class="modal-title">Atualizar Endereço</h4>
    <button type="button" class="close" data-dismiss="modal" title="Fechar">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
</div>


@using (Html.BeginForm("AtualizarEndereco", "Agencia"))
{
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.AgenciaId)
            @Html.HiddenFor(model => model.EnderecoId)

            @Html.Partial("_Enderecos")

            <div class="modal-footer">
                <input type="submit" value="Atualizar" class="btn btn-success" title="Atualizar" />
                <input type="button" class="btn btn-danger" data-dismiss="modal" value="Fechar" title="Atualizar" />
            </div>
        </div>
    </div>
}