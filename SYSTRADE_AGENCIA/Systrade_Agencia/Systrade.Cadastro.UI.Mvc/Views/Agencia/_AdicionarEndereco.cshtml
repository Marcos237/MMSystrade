@model Systrade.Aplicacao.ViewModel.EnderecoViewModel

<div class="modal-header">
    <h4 class="modal-title">Novo Endereço</h4>
    <button type="button" class="close" data-dismiss="modal" title="Fechar">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
</div>


@using (Html.BeginForm("AdicionarEndereco","Agencia"))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.Hidden("AgenciaId", (Guid?)ViewBag.AgenciaId)

            @Html.Partial("_Enderecos")

            <div class="modal-footer">
                <input type="submit" value="Adicionar" class="btn btn-success" title="Adicionar"/>
                <input type="button" class="btn btn-danger" data-dismiss="modal" value="Fechar" title="Fechar" />
            </div>
        </div>
    </div>
}