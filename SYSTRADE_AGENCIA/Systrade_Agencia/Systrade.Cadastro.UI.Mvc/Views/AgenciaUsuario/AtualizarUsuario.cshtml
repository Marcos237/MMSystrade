@model Systrade.Aplicacao.ViewModel.UsuarioViewModel

@{
    ViewBag.Title = "AtualizarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section>
    @using (Html.BeginForm())
    {
        <h4 class="text-center">Atualizar Usuário</h4>
        <hr />

        @Html.Partial("_ErrorSummary")
        @Html.Partial("_SuccessSummary")

        @Html.HiddenFor(model => model.AgenciaId)
        @Html.HiddenFor(model => model.UsuarioId)
        @Html.HiddenFor(model => model.CPF)
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2 required" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        placeholder = "Nome",
                        autofocus = true,
                        id = "txteditarnomeusuario",
                        maxlength = "150"
                    }
                })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sobrenome, htmlAttributes: new { @class = "control-label col-md-2 required" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sobrenome, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        placeholder = "Sobrenome",
                        autofocus = true,
                        id = "txteditarsobrenomeusuario",
                        maxlength = "150"
                    }
                })
                @Html.ValidationMessageFor(model => model.Sobrenome, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Celular, htmlAttributes: new { @class = "col-sm-2 col-form-label required" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Celular, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        placeholder = "Celular",
                        autofocus = true,
                        id = "txteditarusuariocelular",
                        maxlength = "14"
                    }
                })
                @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TelefoneFixo, htmlAttributes: new { @class = "col-sm-12 col-form-label" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.TelefoneFixo, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        placeholder = "Telefone",
                        autofocus = true,
                        id = "txteditarusuariotelefonefixo",
                        maxlength = "13"
                    }
                })
                @Html.ValidationMessageFor(model => model.TelefoneFixo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 required" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Email, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        placeholder = "Email",
                        autofocus = true,
                        id = "txteditarusuarioemail",
                        maxlength = "150"
                    }
                })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="for-group">
            <div class="col-md-4">
                <input type="submit" value="Salvar" title="Salvar" class="btn btn-primary" />
            </div>
        </div>
    }
</section>
<script src="~/Scripts/Mascaras/MascarasCadastro.js"></script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
