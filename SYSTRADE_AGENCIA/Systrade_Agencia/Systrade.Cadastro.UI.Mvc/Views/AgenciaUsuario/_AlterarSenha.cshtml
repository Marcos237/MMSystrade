@model Systrade.Aplicacao.ViewModel.SenhaViewModel



<div class="modal-header">
    <h4 class="modal-title">Alterar Senha</h4>
    <button type="button" class="close" data-dismiss="modal" title="Fechar">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
</div>

<div class="form-group-sm">
    @Html.Partial("_ErrorSummary")
</div>
@Html.HiddenFor(model => model.Code)
@using (Html.BeginForm("AlterarSenha", "AgenciaUsuario"))
{

    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.Hidden("UsuarioId", (Guid?)ViewBag.UsuarioId)
            @Html.Partial("_EditarSenhaAgenciaUsuario")

            <div class="modal-footer">
                <input type="submit" value="Adicionar" class="btn btn-success" title="Adicionar" id="adicionarusuario" />
                <input type="button" class="btn btn-danger" data-dismiss="modal" value="Fechar" title="Fechar" />
            </div>
        </div>
    </div>
}