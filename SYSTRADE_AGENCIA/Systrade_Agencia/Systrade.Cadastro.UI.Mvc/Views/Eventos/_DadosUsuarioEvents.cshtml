@model IEnumerable<Systrade.Eventos.Aplicacao.ViewModel.UsuarioEventsViewModel>


<div class="container-fluid">

    @if (Model.Any())
    {
        <table class="table table-hover table-responsive" id="eventos">
            <thead class="bg-success">
                <tr class="text-xl-left">
                    <th>
                        @Html.DisplayNameFor(model => model.NomeUsuario)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.UsuarioModificado)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.CPF)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClaimValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataOcorrencia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Acao)
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsuarioModificado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClaimValue)
                    </td>
                    <td class="inline">
                        @Html.DisplayFor(modelItem => item.DataOcorrencia)
                    </td>
                    <td class="text-danger inline">
                        @Html.DisplayFor(modelItem => item.Acao)
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    Nenhuma informação desse usuário.
                </th>
            </tr>
        </table>
    }
</div>